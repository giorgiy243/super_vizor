<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="super_vizor.Page_Auth">
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,10">
            <Label Text="Welcome to app"
                   FontSize="22"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand"></Label>
            <Entry Placeholder="Login"></Entry>
            <Entry Placeholder="Password"></Entry>
                 
            
                 <Button Text="Enter" 
                        Clicked="buttonEnter_click"></Button>
                 <Button Text="Registration" 
                        Clicked="buttonRegistration_click"
                          HorizontalOptions="Center"
                          VerticalOptions="CenterAndExpand"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>